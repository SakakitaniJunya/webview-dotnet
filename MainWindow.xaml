<Window x:Class="WebView2Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:webview2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        mc:Ignorable="d"
        Title="ユーザー管理システム - WebView2Desktop" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Name="NavigateButton" Content="Reactアプリを開く" Click="NavigateButton_Click" 
                    Padding="10,5" Margin="5" Background="#007bff" Foreground="White" 
                    BorderBrush="#007bff" BorderThickness="1"/>
            <Button Name="RefreshButton" Content="更新" Click="RefreshButton_Click" 
                    Padding="10,5" Margin="5" Background="#28a745" Foreground="White" 
                    BorderBrush="#28a745" BorderThickness="1"/>
            <TextBlock Name="StatusText" Text="準備完了" VerticalAlignment="Center" 
                       Margin="10,0" Foreground="#666"/>
        </StackPanel>
        
        <webview2:WebView2 Grid.Row="1" Name="WebView" Margin="10" 
                           NavigationCompleted="WebView_NavigationCompleted"/>
    </Grid>
</Window>
